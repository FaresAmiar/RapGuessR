<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".ChoixRapperActivity">


    <TextView
        android:id="@+id/etDesc"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="93dp"
        android:text="Choisissez vos rappeurs préférés"
        android:textSize="24sp" />

    <RadioGroup
        android:id="@+id/rdGroup"
        android:layout_width="267dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="125dp">

        <RadioButton
            android:id="@+id/radFacile"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:text="Facile" />

        <RadioButton
            android:id="@+id/radDifficile"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="Difficile" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvChoix"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="107dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="202dp"
        android:text="Choix du mode"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnDemarrer"
        android:layout_width="117dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="139dp"
        android:layout_marginEnd="154dp"
        android:layout_marginBottom="51dp"
        android:text="DEMARRER"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtRappeur"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_above="@+id/choixRappeur"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnRappeur"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvChoix"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="33dp"
        android:text="Entrer Rappeur"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDesc"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="95dp"
        android:text="Vous devez entrez ou bien selectionner dans la liste le nom de 5 rappeurs un par un"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/choixRappeur"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnRappeur"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="43dp"
        android:entries="@array/rappeurs" />


</RelativeLayout>