<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".ChoixRapperActivity">


    <TextView
        android:id="@+id/etDesc"
        android:layout_width="199dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="102dp"
        android:text="Choisissez vos rappeurs préférés"
        android:textSize="24sp" />

    <RadioGroup
        android:id="@+id/rdGroup"
        android:layout_width="267dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="123dp">

        <RadioButton
            android:id="@+id/radFacile"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:text="Facile" />

        <RadioButton
            android:id="@+id/radDifficile"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="Difficile" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvChoix"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="137dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="236dp"
        android:text="Choix du mode"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnDemarrer"
        android:layout_width="117dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="166dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="37dp"
        android:text="DEMARRER"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtRappeur"
        android:layout_width="111dp"
        android:layout_height="48dp"
        android:layout_above="@+id/tvChoix"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="268dp"
        android:layout_marginBottom="135dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnRappeur"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvChoix"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="254dp"
        android:layout_marginBottom="62dp"
        android:text="Entrer Rappeur"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDesc"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="126dp"
        android:text="Vous devez entrez le nom de 5 rappeurs un par un"
        android:textSize="18sp" />


</RelativeLayout>