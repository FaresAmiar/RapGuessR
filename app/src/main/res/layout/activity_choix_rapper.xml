<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".ChoixRapperActivity">


    <TextView
        android:id="@+id/etDesc"
        android:layout_width="199dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="102dp"
        android:text="Choisissez vos rappeurs préférés"
        android:textSize="24sp" />

    <RadioGroup
        android:id="@+id/rdGroup"
        android:layout_width="264dp"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="131dp">

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:text="Facile" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="Difficile" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvChoix"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="137dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="236dp"
        android:text="Choix du mode"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnDemarrer"
        android:layout_width="97dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="166dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="50dp"
        android:text="DEMARRER"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtRappeur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvChoix"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="294dp"
        android:layout_marginBottom="164dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnRappeur"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvChoix"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="97dp"
        android:text="Entrer Rappeur"
        android:textSize="18sp" />


</RelativeLayout>